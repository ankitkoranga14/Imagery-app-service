# =============================================================================
# Imagery Guardrail & Hybrid Pipeline - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# App Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT_JSON=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/imagery.db
# PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/imagery

# Redis
REDIS_URL=redis://localhost:6379/1

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# =============================================================================
# Azure Blob Storage (Production)
# =============================================================================
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# AZURE_CONTAINER_NAME=imagery

# =============================================================================
# External APIs
# =============================================================================
# NANO_BANANA_API_URL=https://api.nanobanana.ai/v1/placement
# NANO_BANANA_API_KEY=your-api-key-here

# =============================================================================
# ML Settings
# =============================================================================
ML_MODEL_CACHE_DIR=./ml_cache
CACHE_TTL_SECONDS=3600
MAX_IMAGE_SIZE_BYTES=10485760
